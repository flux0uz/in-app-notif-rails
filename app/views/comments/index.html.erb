<div class="container my-5">
  <p id="notice"><%= notice %></p>

  <h1>Comments</h1>

  <table>
    <thead>
      <tr>
        <th>User</th>
        <th>Body</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @comments.each do |comment| %>
        <tr>
          <td><%= comment.user.email %></td>
          <td><%= comment.body %></td>
          <td><%= link_to 'Show', comment, class: 'btn btn-primary' %></td>
          <td><%= link_to 'Edit', edit_comment_path(comment), class: 'btn btn-primary' %></td>
          <td><%= link_to 'Destroy', comment, class: 'btn btn-danger' method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'New Comment', new_comment_path %>
</div>
